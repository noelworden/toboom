<div class="media" id='item-<%= item.id %>'>
  <div class="media-body">
    <p><strong><%= distance_of_time_in_words(Time.now, item.expires_at)%><%=" left before implosion || "%></strong>
      <%= item.name %>
      <% if item.complete %>
        <%= link_to "Mark Incomplete", user_item_path(item.user, item), method: :put, class: 'btn btn-success' %>
      <% else %>
        <%= link_to "Complete", user_item_path(item.user, item), method: :put, class: 'btn btn-success' %>
      <% end %>
        <%= link_to "Delete Item", user_item_path(item.user, item), method: :delete, remote: true, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this item?' }%>
      </p>
  </div>
</div>