<h1><%= current_user.email%>'s ToBoom Items</h1>

<h4>All your things to do:</h4>
<%= render @user.items.incomplete_items %>

<div class="complete-items">
  <%# @incomplete_items.each do |item| %>
    <%#= render partial: 'item', locals: {item: item} %>
    <%#= link_to "Complete", user_item_path(item.user, item), method: :put, class: 'btn btn-success' %>
    <%#= link_to "Delete Item", user_item_path(item.user, item), method: :delete, remote: true, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this item?' }%>
  <%# end %>
</div>

<% if current_user %>
  <%= render partial: 'items/form',  locals: {user: @user} %>
<% end %>

<h4> All your completed things: </h4>
<%= render @user.items.complete_items %>

<div class="complete-items">
  <%# @complete_items.each do |item| %>
  <%#= render partial: 'item', locals: {item: item} %>
  <%# end %>
</div>
